{
  "name": "firebaseui-angular",
  "version": "0.1.1",
  "scripts": {
    "build": "gulp build",
    "build:watch": "gulp",
    "lint": "tslint --type-check --project tsconfig.json src/**/*.ts",
    "test": "tsc && karma start",
    "prepeare": "npm run build && cd dist && npm link && cd .. && cd sample && npm run link",
